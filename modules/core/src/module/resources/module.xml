<module xmlns="urn:jboss:module:1.0" name="org.immutant.core">

    <resources>
        <resource-root path="${project.artifactId}.jar"/>
        <resource-root path="clojure.jar"/>
        <resource-root path="polyglot-core.jar"/>
        <resource-root path="polyglot-core-extensions.jar"/>
        <resource-root path="tools.logging.jar"/>
        <resource-root path="leiningen-core.jar"/>
        <resource-root path="pomegranate.jar"/>
        <resource-root path="maven-aether-provider.jar"/>
        <resource-root path="aether-impl.jar"/>
        <resource-root path="aether-spi.jar"/>
        <resource-root path="aether-util.jar"/>
        <resource-root path="aether-api.jar"/>
        <resource-root path="aether-connector-file.jar"/>
        <resource-root path="aether-connector-wagon.jar"/>
        <resource-root path="wagon-http-lightweight.jar"/>
        <resource-root path="wagon-provider-api.jar"/>
        <resource-root path="maven-model.jar"/>
        <resource-root path="maven-model-builder.jar"/>
        <resource-root path="maven-repository-metadata.jar"/>
        <resource-root path="plexus-utils.jar"/>
        <resource-root path="plexus-interpolation.jar"/>
    </resources>

    <exports>
      <include-set>
        <path name="clojure/lang"/>
        <path name="clojure/lang/**"/>
        <path name="clojure/tools/logging/**"/>
        <path name="org/projectodd/polyglot"/>
        <path name="org/projectodd/polyglot/**"/>
      </include-set>
    </exports>

    <dependencies>
        <module name="javax.api"/>
        <module name="javax.servlet.api"/>
        <module name="org.jboss.staxmapper"/>
        <module name="org.jboss.as.controller"/>
        <module name="org.jboss.as.ee"/>
        <module name="org.jboss.as.jmx"/>
        <module name="org.jboss.as.server"/>
        <module name="org.jboss.as.clustering.jgroups"/>
        <module name="org.jboss.modules"/>
        <module name="org.jboss.msc"/>
        <module name="org.jboss.logging"/>
        <module name="org.jboss.vfs"/>
        <module name="org.jboss.metadata"/>
        <module name="sun.jdk"/>
        <module name="org.apache.commons.io"/>
    </dependencies>
</module>

